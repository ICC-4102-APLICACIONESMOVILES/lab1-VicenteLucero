<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Login_b"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="150dp"
            android:layout_marginTop="65dp" app:layout_constraintTop_toBottomOf="@+id/Pass_input"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="139dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="157dp" android:visibility="visible"
            android:onClick="sendUser"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Email_input" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="97dp" app:layout_constraintHorizontal_bias="0.0"
            android:hint="example@exam.ple"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Pass_input" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/Email_input" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="71dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="98dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/Login_b" app:layout_constraintHorizontal_bias="1.0"
            android:hint="Password"/>
</android.support.constraint.ConstraintLayout>